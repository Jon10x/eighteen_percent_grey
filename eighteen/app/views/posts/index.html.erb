<h1>Eighteen Percent Grey</h1>

<div class="posts-wrapper row">
  <% @posts.each do |post| %>
  <div class="post"></div>
  <div class="post-head"></div>
  <div class="name"></div>
  Jonathan
  <div class="image center-block"></div>
  <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
  <% end %>
</div>

